{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@context/*": ["src/context/*"],
      "@reducers/*": ["src/reducers/*"],
      "@styles/*": ["src/styles/*"],
      "@api/*": ["src/lib/api/*"],
      "@hooks/*": ["src/lib/hooks/*"],
      "@typings/*": ["src/typings/*"],
      "@lib/*": ["src/lib/*"],
    },
    "outDir": "build",
    "allowJs": true,
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "es2020"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "strict": true,
    "downlevelIteration": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "include": ["./src/**/*"]
}
